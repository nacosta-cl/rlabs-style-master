<div>
<h2>Crea tu cuenta de usuario</h2>
    <% if (locals.error) { %>
      <div class="errors">
        Errores detectados!
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.message %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
<div id="container">
<form action="<%= createUserPath %>" method="post">
  <label for="username">Username</label><input type="text" name="username" value="<%= user.username %>" />
  <label for="email">Correo</label><input type="email" name="email" value="<%= user.email %>" />
  <label for="password">Contrase√±a</label><input type="password" name="password" value="<%= user.password %>" />
  <label for="name">Nombre</label><input type="text" name="name" value="<%= user.nombre %>"/>
  <input id="signup" type="submit" name="create" value="Crear cuenta"/>
</form>